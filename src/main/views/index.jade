#login.panel.wrapper
  h1 Welcome to Quo
  h2 Login
  - if (typeof(loginFlash) != 'undefined')
    p#flashMessage.goodMessage= loginFlash
  - if (typeof(loginBadFlash) != 'undefined')
    p#flashMessage.badMessage= loginBadFlash
  form(method="POST", action="/")
    p Username
    input(type="text", id="user", name="user")
    p Password
    input(type="password", id="pass", name="pass")
    br
    input#input-button(type="submit", class="topMargin", name="login", value="Login")
script(type="text/javascript", src="../js/display/login-display.js")